<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TrekkersBD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travel_Management_System.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <div id="glass" style=" border-radius: 15px; width: 17vw; height: 78vh; top: 12vh; left: 1vw; position: fixed;">
            <div style="margin-top: 7vh;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 sidebar">
                            <ul class="nav flex-column text-center">
                                <li class="nav-item mb-4">
                                    <a asp-controller="Traveler" asp-action="Profile"><img src="/Icon/Profile.png" style="width: 180px;"></a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="Traveler" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="" asp-action="">Package</a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="" asp-action="">Transport</a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="" asp-action="">Hotel</a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="" asp-action="">Book</a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 250px; font-size: 28px" asp-controller="Traveler" asp-action="Profile">Profile</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav id="glass" class="navbar navbar-expand navbar-light mb-3">
            <div class="container-fluid">
                <a class="ps-2" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Icon/Trekkersbd.png" width="150px" /></a>
                <ul class="navbar-nav">
                    <li class="nav-item pe-2">
                        <a class="btn btn-outline-dark" style="font-size: 30px;" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="glass" class="text-center fixed-bottom">
        <div class=" text-center p-1 d-flex justify-content-between align-items-center">
            <span class="h6 ms-2 mt-2">© 2023 TrekkersBD</span>
            <div>
                <a class="btn btn-outline-dark btn-floating m-1" href="">
                    <i class="bi bi-facebook"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="">
                    <i class="bi bi-messenger"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="">
                    <i class="bi bi-instagram"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="">
                    <i class="bi bi-twitter"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="">
                    <i class="bi bi-youtube"></i>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>