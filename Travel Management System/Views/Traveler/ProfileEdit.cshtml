@using Travel_Management_System.EF.Models;
@model User

@{
	Layout = "_TravelerLayout";
}

<div class="container" style="margin-top: 10rem; margin-left: 9rem;">
	<div class="row justify-content-center align-items-center">
		<div class="col-9">
			<div id="glass" class="card" style="border-radius: 15px;">
				<div class="card-body p-5">
					<form method="post">
						<div class="row">
							<div class="col-9">
								<div class="row">
									<div class="col-6 mb-4">
										<div class="form-outline">
											<label asp-for="Name" class="form-label"></label>
											<input asp-for="Name" class="form-control" />
											<span asp-validation-for="Name" class="text-light"></span>
										</div>
									</div>
									<div class="col-6 mb-4">
										<div class="form-outline">
											<label asp-for="Email" class="form-label"></label>
											<input asp-for="Email" class="form-control" />
											<span asp-validation-for="Email" class="text-light"></span>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6 mb-4">
										<div class="form-outline">
											<label asp-for="Username" class="form-label"></label>
											<input asp-for="Username" class="form-control" />
											<span asp-validation-for="Username" class="text-light"></span>
										</div>
									</div>
									<div class="col-6 mb-4">
										<div class="form-outline">
											<label asp-for="PhoneNumber" class="form-label"></label>
											<input asp-for="PhoneNumber" class="form-control" />
											<span asp-validation-for="PhoneNumber" class="text-light"></span>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6 mb-4">
										<div class="form-outline">
											<label asp-for="DateOfBirth" class="form-label"></label>
											<input asp-for="DateOfBirth" class="form-control" />
											<span asp-validation-for="DateOfBirth" class="text-light"></span>
										</div>
									</div>
									<div class="col-6 mb-4">
										<label asp-for="Gender" class="form-label pb-2"></label><br />
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" asp-for="Gender" checked="@(Model == null ? false : (Model.Gender.Equals("Male") ? true : false))" value="Male" id="M" />
											<label for="M" class="form-check-label">Male</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" asp-for="Gender" checked="@(Model == null ? false : (Model.Gender.Equals("Female") ? true : false))" value="Female" id="F" />
											<label for="F" class="form-check-label">Female</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" asp-for="Gender" checked="@(Model == null ? false : (Model.Gender.Equals("Other") ? true : false))" value="Other" id="O" />
											<label for="O" class="form-check-label">Other</label>
										</div>
										<br />
										<span asp-validation-for="Gender" class="text-light"></span>
									</div>
									<div class="mt-3">
										<button type="submit" class="btn btn-outline-dark btn-lg" >Save</button>
									</div>
								</div>
							</div>
							<div class="col-3">
								<div class="text-center ms-3">
									<img src="/Icon/Profile.png" style="width: 150px; margin-bottom:10px;"><br />
									<a href="">Change</a>
								</div>
							</div>
						</div>
					</form>
					@section Scripts{
						@{
							<partial name="_ValidationScriptsPartial" />
						}
					}
				</div>
			</div>
		</div>
	</div>
</div>